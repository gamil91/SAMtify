<%= form_for playlist do |f| %>
    <% if playlist.errors.any? %>
       <% playlist.errors.full_messages.each do |m| %>
            <p class="danger"><%= m %></p>
        <% end %>
    <% end %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :user %>
<%= f.collection_select :user_id, User.all, :id, :name %>
<br>
<%= f.submit %>
<% end %>