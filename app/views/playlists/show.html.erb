<h1>Playlist: <%= @playlist.name %></h1>

<p>Songs: <%= @songs.count %></p>
<ol><% @songs.each do |song| %> 
    <li>
        <%= link_to song.title, song %> - <%= song.artist.name %>
        <%= button_to "Delete", PlaylistSong.find_by(song_id: song.id, playlist_id: @playlist.id), method: :delete, params: {playlist_id: @playlist.id} %>
    </li>
<% end %>
</ol>

<button><%= link_to "Add Songs", songs_path %></button>
<br>
<button><%= link_to "Edit Playlist", edit_playlist_path(@playlist) %></button>
<button><%= link_to "Delete Playlist", playlist_path(@playlist), method: :delete, data: {confirm: "Are you sure you want to delete this playlist?"} %></button>
<br>
<button><%= link_to "Show All Playlists", playlists_path %></button>