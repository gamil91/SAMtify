<ul>
<% if @user.errors.any?%>
<%= @user.errors.full_messages.each do |msg|%>
    <li><%= msg%></li>
    <%end%>
<%end%>
</ul>
<h1> Create a SAMtify account! </h1>
<%=form_for @user do |f|%>
<%=f.label :name%>
<%=f.text_field :name%>
<%=f.label :username%>
<%=f.text_field :username%>
<%=f.label :password%>
<%=f.password_field :password%>
<%=f.submit%>
<% end %>