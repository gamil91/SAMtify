<!DOCTYPE html>
<html>
  <head>
    <title>Samtify</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%if logged_in? %>
      <%=link_to 'Log Out', sessions_path, method: :delete%>
    <% end %>

    <%= yield %>
  </body>
</html>
