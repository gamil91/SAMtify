<h1><%= @artist.name %></h1>
<br>
<div id="artist-show">
    <img src="<%=@artist.image%>" alt="<%=@artist.name%>" style="width:300px;height:300px;">
    <br><br>
    <!--<div id="pad">
    <h3>Songs: <%= @songs.count %></h3>-->
    <% @songs.each do |song| %>
        <p><%= link_to song.title, song %></p>
    <% end %>
    <!--</div>-->
            <% if @subscription %>
                <%= button_to "Unsubscribe", @subscription, method: :delete %>
           <% else %>
                <%= button_to "Subscribe", subscriptions_path, method: :post, params: {artist_id: @artist.id} %>
            <% end %>
</div>
